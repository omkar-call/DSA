# Python3 implementation for Priority Scheduling with
# Different Arrival Time priority scheduling
"""
Steps:
1. Sort the processes according to arrival time
2. If arrival time is same then according to priority
3. Apply FCFS for execution order
"""
totalprocess = 5
proc = []
for i in range(totalprocess):
 l = [0, 0, 0, 0] # [arrival, burst, priority, process_id]
 proc.append(l)
# Function to calculate Waiting Time
def get_wt_time(wt):
 # service array stores cumulative burst time
 service = [0] * totalprocess
 service[0] = 0
 wt[0] = 0
 for i in range(1, totalprocess):
 service[i] = proc[i - 1][1] + service[i - 1]
 wt[i] = service[i] - proc[i][0] + 1
 # If waiting time is negative, change it to zero
 if wt[i] < 0:
 wt[i] = 0
# Function to calculate Turn Around Time
def get_tat_time(tat, wt):
 for i in range(totalprocess):
 tat[i] = proc[i][1] + wt[i]
# Function to calculate and display scheduling details
def findgc():
 wt = [0] * totalprocess
 tat = [0] * totalprocess
 wavg = 0
 tavg = 0
 # Calculate waiting times
 get_wt_time(wt)
 # Calculate turnaround times
 get_tat_time(tat, wt)
 stime = [0] * totalprocess
 ctime = [0] * totalprocess
 stime[0] = 1
 ctime[0] = stime[0] + tat[0]
 # Calculate start & complete times
 for i in range(1, totalprocess):
 stime[i] = ctime[i - 1]
 ctime[i] = stime[i] + tat[i] - wt[i]
 print("Process_no\tStart_time\tComplete_time\tTurn_Around_Time\tWaiting_Time")
 # Display results
 for i in range(totalprocess):
 wavg += wt[i]
 tavg += tat[i]
 print(f"{proc[i][3]}\t\t{stime[i]}\t\t{ctime[i]}\t\t{tat[i]}\t\t\t{wt[i]}")
 # Average times
 print("\nAverage waiting time is : ", wavg / totalprocess)
 print("Average turnaround time : ", tavg / totalprocess)
# Driver code
if __name__ == "__main__":
 arrivaltime = [1, 2, 3, 4, 5]
 bursttime = [4, 7, 1, 5, 3]
 priority = [8, 7, 1, 4, 3]
 for i in range(totalprocess):
 proc[i][0] = arrivaltime[i]
 proc[i][1] = bursttime[i]
 proc[i][2] = priority[i]
 proc[i][3] = i + 1
 # Sort by priority, then arrival time
 proc = sorted(proc, key=lambda x: x[2])
 proc = sorted(proc)
 # Generate Gantt Chart & results
 findgc()
